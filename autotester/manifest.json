{
	"manifest_version": 2,
	"name" : "__MSG_extName__",
	"version" : "0.0.1",
	"default_locale": "zh_CN",
	"offline_enabled": true,
	"description" : "__MSG_extDesr__",
	"background": {
		"page": "background.html"
	 },

	"content_scripts": [ {
		"all_frames": true,
		"js": ["content.js"],
		"matches": ["<all_urls>"]
	 }],
	"browser_action" : {
		"default_icon" : "icon.png",
		"default_title": "__MSG_extName__",
		"default_popup": "popup.html"
	},
	"permissions" : ["management", "storage", "tabs", "<all_urls>", "unlimitedStorage"],
	"options_ui" : 
	{
		"page": "option.html",
		"chorme_style": true
	},
	"icons": {
		"16" : "icon.png",
		"32" : "icon.png",
		"48" : "icon.png",
		"128" : "icon.png"
	}
}
